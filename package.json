{
  "name": "microsoft-pipelines-tasks-devkit",
  "displayName": "microsoft-pipelines-tasks-devkit",
  "description": "Dev Kit for Microsoft pipelines tasks: Azure DevOps + GitHub",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tasksDevKit",
          "title": "Tasks Dev Kit",
          "icon": "$(azure-devops)"
        }
      ]
    },
    "views": {
      "tasksDevKit": [
        {
          "id": "tasksDevKit.tasks",
          "name": "Tasks list",
          "type": "tree"
        },
        {
          "id": "tasksDevKit.settings",
          "name": "Settings",
          "type": "tree"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "tasksDevKit.settings",
        "contents": "In order to upload tasks to your organization, you need to be logged in TFX.\n[Login to TFX](command:tasksDevKit.tfx.login)",
        "when": "tasksDevKit.tfx.signed-in === false"
      }
    ],
    "configuration": {
      "title": "Dev Kit Settings",
      "properties": {
        "tasksDevKit.adoOrgUrl": {
          "type": "string",
          "default": "https://dev.azure.com/your-organization",
          "description": "Azure DevOps organization URL"
        },
        "tasksDevKit.adoPAT": {
          "type": "string",
          "default": "your-pat",
          "description": "Azure DevOps Personal Access Token"
        }
      }
    },
    "commands": [
      {
        "command": "tasksDevKit.build",
        "title": "Build Selected Tasks",
        "icon": "$(git-stash)"
      },
      {
        "command": "tasksDevKit.debug",
        "title": "Debug Selected Tasks",
        "icon": "$(debug-alt)"
      },
      {
        "command": "tasksDevKit.test",
        "title": "Test Selected Tasks",
        "icon": "$(beaker)"
      },
      {
        "command": "tasksDevKit.deploy",
        "title": "Deploy Selected Tasks",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "tasksDevKit.login",
        "title": "Login to Azure DevOps",
        "icon": "$(sign-in)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "tasksDevKit.build",
          "when": "view == tasksDevKit.tasks",
          "group": "navigation@1"
        },
        {
          "command": "tasksDevKit.debug",
          "when": "view == tasksDevKit.tasks",
          "group": "navigation@2"
        },
        {
          "command": "tasksDevKit.test",
          "when": "view == tasksDevKit.tasks",
          "group": "navigation@3"
        },
        {
          "command": "tasksDevKit.deploy",
          "when": "view == tasksDevKit.tasks",
          "group": "navigation@4"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "22.8.6",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
